{# templates/article/article_list.html.twig #}

{% block body %}
  <div class="col-md-4">
    <div class="card flex-md-row mb-4 shadow-sm h-md-250">
      <div class="card-body d-flex flex-column align-items-start">
        <strong class="d-inline-block mb-2 text-primary">{{ article.category.name }}</strong>
        <h3 class="mb-0">
          <a class="text-dark" href="#">{{ article.title() }}</a>
        </h3>
        <div class="mb-1 text-muted">{{ article.dateCreation|date('d M Y') }}</div>
        <p class="card-text mb-auto">{{ article.getApercuContents() }}</p>
        <a href="{{ path('app_article', {'id': article.id()}) }}">Lire la suite</a>
      </div>
      <img src="{{ article.image }}" alt="" width="200" height="250">
    </div>
  </div>
{% endblock %}
